/**
 * Vynucen√≠ naƒçten√≠ soubor≈Ø.
 *
 * @return string Zpr√°va o v√Ωsledku.
 */
function dbs_force_reload_validation(): string {
	$results = [];
	
	// Vyƒçi≈°tƒõn√≠ WordPress cache
	if ( function_exists( 'wp_cache_flush' ) ) {
		wp_cache_flush();
		$results[] = '‚úÖ WordPress cache vyƒçi≈°tƒõn';
	} else {
		$results[] = '‚ö†Ô∏è WordPress cache funkce nen√≠ dostupn√°';
	}
	
	// Vyƒçi≈°tƒõn√≠ transients
	global $wpdb;
	$wpdb->query( "DELETE FROM {$wpdb->options} WHERE option_name LIKE '_transient_%'" );
	$wpdb->query( "DELETE FROM {$wpdb->options} WHERE option_name LIKE '_site_transient_%'" );
	$results[] = '‚úÖ Transients vyƒçi≈°tƒõny';
	
	// Kontrola soubor≈Ø
	$files_to_check = [
		'admin/partials/rule-form.php' => [
			'old_text' => 'Mus√≠te zadat alespo≈à jednu sazbu',
			'new_text' => 'Kontrola pouze z√°porn√Ωch hodnot'
		],
		'assets/js/admin.js' => [
			'old_text' => 'Mus√≠te zadat alespo≈à jednu sazbu',
			'new_text' => 'Kontrola pouze z√°porn√Ωch hodnot'
		]
	];
	
	foreach ( $files_to_check as $file_path => $checks ) {
		$full_path = DBS_PLUGIN_PATH . $file_path;
		
		if ( file_exists( $full_path ) ) {
			$content = file_get_contents( $full_path );
			
			if ( strpos( $content, $checks['old_text'] ) !== false ) {
				$results[] = '‚ùå ' . $file_path . ' - st√°le obsahuje starou validaci';
			} else {
				$results[] = '‚úÖ ' . $file_path . ' - star√° validace odstranƒõna';
			}
			
			if ( strpos( $content, $checks['new_text'] ) !== false ) {
				$results[] = '‚úÖ ' . $file_path . ' - obsahuje novou validaci';
			} else {
				$results[] = '‚ùå ' . $file_path . ' - neobsahuje novou validaci';
			}
		} else {
			$results[] = '‚ùå ' . $file_path . ' - soubor nebyl nalezen';
		}
	}
	
	return sprintf(
		'<strong>Vynucen√≠ naƒçten√≠ dokonƒçeno:</strong><br>%s<br><br><strong>Doporuƒçen√≠:</strong> Vyƒçistƒõte cache prohl√≠≈æeƒçe (Ctrl+ShiftR) a zkuste vytvo≈ôit pravidlo s nulovou z√°kladn√≠ sazbou.',
		implode( '<br>', $results )
	);
}

/**
 * Vyƒçi≈°tƒõn√≠ v≈°ech cache.
 *
 * @return string Zpr√°va o v√Ωsledku.
 */
function dbs_clear_all_cache(): string {
	$results = [];
	
	// WordPress cache
	if ( function_exists( 'wp_cache_flush' ) ) {
		wp_cache_flush();
		$results[] = '‚úÖ WordPress cache vyƒçi≈°tƒõn';
	}
	
	// Transients
	global $wpdb;
	$deleted_transients = $wpdb->query( "DELETE FROM {$wpdb->options} WHERE option_name LIKE '_transient_%'" );
	$deleted_site_transients = $wpdb->query( "DELETE FROM {$wpdb->options} WHERE option_name LIKE '_site_transient_%'" );
	$results[] = sprintf( '‚úÖ Transients vyƒçi≈°tƒõny (%d z√°znam≈Ø)', $deleted_transients + $deleted_site_transients );
	
	// Plugin cache
	$cache_cleared = dbs_cleanup_cache();
	$results[] = sprintf( '‚úÖ Plugin cache vyƒçi≈°tƒõn (%d z√°znam≈Ø)', $cache_cleared );
	
	// WooCommerce cache
	if ( function_exists( 'wc_cache_helper_get_transient_version' ) ) {
		wp_cache_flush();
		$results[] = '‚úÖ WooCommerce cache vyƒçi≈°tƒõn';
	}
	
	return sprintf(
		'<strong>Cache vyƒçi≈°tƒõna:</strong><br>%s',
		implode( '<br>', $results )
	);
}

